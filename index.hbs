<script>
    $(".header").wordThumbnail({
        'shape': 'rounded',
        'width': '3em',
        'font_size': '30px'
    });
    $(".code-title").wordThumbnail({
        'shape': 'square',
        'width': '2em',
        'font_size': '20px'
    })

    $(".other-title").wordThumbnail({
        'shape': 'square',
        'width': '2em',
        'font_size': '20px'
    })

    $(".comment-gavatar").wordThumbnail({
        'shape': 'circle',
        'width': '3.5em',
        'font_size': '30px'
    });

    $(".circle-example").wordThumbnail({
        'shape': 'circle'
    })
    $(".square-example").wordThumbnail({
        'shape': 'square'
    })
    $(".rounded-example").wordThumbnail({
        'shape': 'rounded'
    })
    $(".login").wordThumbnail({
        'shape': 'circle',
        'width': '30px',
        'font_size': '20px'
    })
    $('.menu').dropit();

    $(".init").wordThumbnail();
</script>
</html>